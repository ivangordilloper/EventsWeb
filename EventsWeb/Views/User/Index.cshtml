@model IEnumerable<EventsWeb.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Nombre
            </th>
            <th>
               Apellido Paterno
            </th>
            <th>
                Apellido Materno
            </th>
            <th>
                Email
            </th>
            
            <th>
                Tipo de Usuario
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.IdusertypeNavigation.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Iduser">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Iduser">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Iduser">Eliminar</a> |
            </td>
        </tr>
}
    </tbody>
</table>
